<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StopGame">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B91D6DB3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLetter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="A letra escolhida Ã©"
                android:textColor="#F3DFDF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Nome"
                android:textColor="#F4F2F2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="#090909"
                android:ems="10"
                android:hint="Nome Pessoa"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#514F4F" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="CEP"
                android:textColor="#F4F2F2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="#090909"
                android:ems="10"
                android:hint="Cidade/Estado/Pais"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#514F4F" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Cor"
                android:textColor="#F4F2F2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="#090909"
                android:ems="10"
                android:hint="Cor"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#514F4F" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Comida"
                android:textColor="#F4F2F2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etComida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="#090909"
                android:ems="10"
                android:hint="Comida"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#514F4F" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Animal"
                android:textColor="#F4F2F2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="#090909"
                android:ems="10"
                android:hint="Animal"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#514F4F" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Carro"
                android:textColor="#F4F2F2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="#090909"
                android:ems="10"
                android:hint="Modelo ou Marca"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#514F4F" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="Objeto"
                android:textColor="#F4F2F2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etObjeto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:background="#090909"
                android:ems="10"
                android:hint="Objeto"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#514F4F" />

            <ImageView
                android:id="@+id/ivStop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:srcCompat="@mipmap/stoppng" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>